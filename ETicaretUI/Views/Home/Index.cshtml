@model IEnumerable<Data.Entities.Product>
@{
    ViewData["Title"] = "Ana Sayfa | ETicaret";
}

<header class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold text-primary">ETicaret Sitesi</h1>
                <p class="lead text-muted">En yeni ve kaliteli ürünleri uygun fiyatlarla keşfedin.</p>
                <hr class="my-4">
                <p class="mb-4">Hızlı teslimat, güvenli alışveriş ve %100 müşteri memnuniyeti garantisi sunuyoruz.</p>
            </div>
        </div>
    </div>
</header>

<section class="py-3" id="urunler">
    <div class="container">
        
        <p class="text-center text-muted mb-5">Ürünler</p>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @await Html.PartialAsync("_ProductList", Model)
        </div>
    </div>
</section>