@model IEnumerable<Data.Entities.Product>
@{
    ViewData["Title"] = "Ana Sayfa | ETicaret";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5 mb-5 rounded-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">ETicaret Sitesi</h1>
                <p class="lead">En yeni ve kaliteli ürünleri uygun fiyatlarla keşfedin.</p>
                <hr class="my-4 border-light opacity-25">
                <p class="mb-4">Hızlı teslimat, güvenli alışveriş ve %100 müşteri memnuniyeti garantisi sunuyoruz.</p>
                <a href="/Home/List" class="btn btn-light btn-lg px-4 me-2">
                    <i class="fas fa-shopping-bag me-2"></i>Tüm Ürünler
                </a>
                <a href="#urunler" class="btn btn-outline-light btn-lg px-4">
                    <i class="fas fa-chevron-down me-2"></i>Öne Çıkanlar
                </a>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="/img/hero-image.jpg" alt="ETicaret" class="img-fluid rounded-3 shadow" onerror="this.onerror=null; this.src='/img/hero-placeholder.jpg';">
            </div>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-5 bg-light rounded-3 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="fw-bold mb-4">Popüler Kategoriler</h2>
                <p class="text-muted mb-5">İhtiyacınız olan her şey için alışveriş yapın</p>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-6 col-md-4 col-lg-3">
                <a href="/Home/List?id=1" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm text-center category-card">
                        <div class="card-body py-4">
                            <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle mb-3 mx-auto">
                                <i class="fas fa-laptop fa-2x"></i>
                            </div>
                            <h5 class="card-title">Elektronik</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <a href="/Home/List?id=2" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm text-center category-card">
                        <div class="card-body py-4">
                            <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle mb-3 mx-auto">
                                <i class="fas fa-tshirt fa-2x"></i>
                            </div>
                            <h5 class="card-title">Giyim</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <a href="/Home/List?id=3" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm text-center category-card">
                        <div class="card-body py-4">
                            <div class="feature-icon bg-warning bg-opacity-10 text-warning rounded-circle mb-3 mx-auto">
                                <i class="fas fa-home fa-2x"></i>
                            </div>
                            <h5 class="card-title">Ev Yaşam</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <a href="/Home/List" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm text-center category-card">
                        <div class="card-body py-4">
                            <div class="feature-icon bg-info bg-opacity-10 text-info rounded-circle mb-3 mx-auto">
                                <i class="fas fa-ellipsis-h fa-2x"></i>
                            </div>
                            <h5 class="card-title">Tüm Kategoriler</h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5" id="urunler">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-8 text-center">
                <h2 class="fw-bold">Öne Çıkan Ürünler</h2>
                <p class="text-muted">Sizin için seçtiğimiz en popüler ürünler</p>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @await Html.PartialAsync("_ProductList", Model)
        </div>
        
        <div class="text-center mt-5">
            <a href="/Home/List" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-th-list me-2"></i>Tüm Ürünleri Gör
            </a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light rounded-3 mt-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="feature p-4">
                    <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle mb-3 mx-auto">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                    <h4>Hızlı Teslimat</h4>
                    <p class="text-muted">Siparişleriniz en hızlı şekilde elinize ulaşır.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature p-4">
                    <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle mb-3 mx-auto">
                        <i class="fas fa-credit-card fa-2x"></i>
                    </div>
                    <h4>Güvenli Ödeme</h4>
                    <p class="text-muted">Tüm ödemeleriniz %100 güvenle yapılır.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature p-4">
                    <div class="feature-icon bg-warning bg-opacity-10 text-warning rounded-circle mb-3 mx-auto">
                        <i class="fas fa-undo fa-2x"></i>
                    </div>
                    <h4>Kolay İade</h4>
                    <p class="text-muted">14 gün içinde koşulsuz iade garantisi.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .feature-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .category-card {
        transition: all 0.3s ease;
    }
    
    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>