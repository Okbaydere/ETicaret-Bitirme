@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Yetkisiz Erişim</h4>
                </div>
                <div class="card-body text-center">
                    <img src="/images/access-denied.svg" alt="Erişim Reddedildi" class="img-fluid mb-3"
                         style="max-width: 200px;">
                    <h5 class="text-danger">Bu sayfayı görüntüleme yetkiniz bulunmamaktadır!</h5>
                    <p class="mb-4">Yalnızca yetkili kullanıcılar bu içeriğe erişebilir.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i> Ana Sayfaya Dön
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i> Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>