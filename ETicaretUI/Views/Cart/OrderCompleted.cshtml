@{
    ViewData["Title"] = "Sipariş Tamamlandı";
}

<div class="container mt-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        <h1 class="display-4 mb-4">Siparişiniz Başarıyla Alındı!</h1>
        <p class="lead mb-5">Siparişiniz için teşekkür ederiz. Sipariş bilgilerinizi "Siparişlerim" sayfasından takip
            edebilirsiniz.</p>

        <div class="d-flex justify-content-center">
            <a asp-controller="Account" asp-action="GetOrders" class="btn btn-primary me-3">
                <i class="fas fa-box me-2"></i> Siparişlerime Git
            </a>
            <a asp-controller="Home" asp-action="List" class="btn btn-outline-primary">
                <i class="fas fa-shopping-bag me-2"></i> Alışverişe Devam Et
            </a>
        </div>
    </div>
</div> 