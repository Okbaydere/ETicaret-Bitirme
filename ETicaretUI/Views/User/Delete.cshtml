@model Data.Identity.AppUser
@{
    ViewData["Title"] = "Kullanıcıyı Pasife Al";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="mb-0"><i class="fas fa-user-times me-2"></i> Kullanıcıyı Pasife Al</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i> Dikkat!</h5>
                        <p>
                            <strong>@Model.UserName</strong> kullanıcısını pasife almak istediğinizden emin misiniz?
                            Pasife alınan kullanıcı sisteme giriş yapamayacak ve listelerde görünmeyecektir.
                        </p>
                        <hr>
                        <p class="mb-0">
                            Eğer kullanıcının siparişleri varsa, veri bütünlüğünü korumak için tamamen silinmeyecek, 
                            sadece pasife alınacaktır. İlgili sipariş ve adres bilgileri korunacaktır.
                        </p>
                    </div>

                    <div class="mt-4">
                        <h5 class="mb-3">Kullanıcı Bilgileri</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Kullanıcı Adı:</dt>
                            <dd class="col-sm-8">@Model.UserName</dd>

                            <dt class="col-sm-4">Ad:</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>

                            <dt class="col-sm-4">Soyad:</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>

                            <dt class="col-sm-4">E-posta:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                        </dl>
                    </div>

                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Vazgeç
                        </a>
                        
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-user-slash me-1"></i> Kullanıcıyı Pasife Al
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 