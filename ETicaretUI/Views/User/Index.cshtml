@model List<Data.Identity.AppUser>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users me-2"></i> Kullanıcılar</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Yeni Kullanıcı
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Kullanıcı Listesi</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-3">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> Herhangi bir kullanıcı bulunamadı.
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-edit me-1"></i> Düzenle
                                        </a>
                                        <a asp-action="RoleAssign" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info me-1">
                                            <i class="fas fa-user-tag me-1"></i> Rol Ata
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                            <i class="fas fa-trash-alt me-1"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>