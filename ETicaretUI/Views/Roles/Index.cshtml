@model List<Data.Identity.AppRole>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Rol Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-user-shield me-2"></i> Roller</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Yeni Rol
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Rol Listesi</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                    <tr>
                        <th>Rol Adı</th>
                        <th width="200">İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="2" class="text-center py-3">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> Henüz tanımlanmış rol bulunmamaktadır.
                                </div>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bu rolü silmek istediğinizden emin misiniz?');">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>